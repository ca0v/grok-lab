<?xml version="1.0" encoding="utf-8" ?>
<component name="MazeScene" extends="Scene">
    <script type="text/brightscript" uri="pkg:/components/MazeScene.brs" />
    <children>
        <Rectangle id="background" color="#333333" />
        <Group id="mazeGroup" />
        <Group id="tank" />
        <Group id="bulletsGroup" />
        <Group id="targetsGroup" />
        <Group id="powerUpsGroup" />
        <Label id="markerX" font="font:MediumSystemFont" text="X" color="#FFFFFF" visible="false" />
        <Label id="markerY" font="font:MediumSystemFont" text="Y" color="#FFFFFF" visible="false" />
        <Label id="scoreboard" font="font:SmallSystemFont" color="#FFFFFF" />
        <Label id="instructions" font="font:SmallSystemFont" color="#FF0000" text="Arrows: Move far, Rewind/Play/Fast-Forward: Move/Rotate, OK: Shoot, Replay: Marker X, Options: Marker Y" />
        <Label id="message" font="font:MediumSystemFont" color="#FFFFFF" horizAlign="center" vertAlign="center" visible="false" />
    </children>
</component>